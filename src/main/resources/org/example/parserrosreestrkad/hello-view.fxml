<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.PasswordField?>
<VBox styleClass="all_padding" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.parserrosreestrkad.AppController" style="-fx-padding: 20,10,10,10;" >

    <HBox spacing="10.0">
        <VBox spacing="10.0">
            <TextField text="Логин" fx:id="loginField" style = "-fx-font-size: 15;" onMouseClicked="#loginClicked"/>
            <PasswordField text="Пароль" fx:id="passwordField" styleClass="text_field_large" onMouseClicked="#passwordClicked"/>
        </VBox>
        <VBox spacing="10.0">
            <Button text="Войти" onAction="#handlerLoginAction"/>
<!--            <Button text="QR"/>-->
        </VBox>
        <HBox spacing="10.0">
            <TextField text="Код" fx:id="verifCode" style = "-fx-font-size: 15;" onMouseClicked="#codeClicked"/>
            <Button text="Отправить" onAction="#submitVerificationCode"/>
        </HBox>
    </HBox>

    <Label text="Авторизация" fx:id="labelAuthorization"/>

    <HBox spacing="10.0" styleClass="all_padding">
        <TextField text="Номера.txt" fx:id="filePathField"/>
        <Button text="Загрузить" onAction="#addFile"/>
    </HBox>

    <Label text="Загружен ли файл?" fx:id="loadFile"/>

    <HBox spacing="10.0" styleClass="all_padding" >
        <VBox spacing="10.0" alignment="CENTER">
            <Label text="Парсинг"/>
            <Button text="Парсинг номеров" onAction="#searchKagNumber"/>
            <Button text="Скачивание" onAction="#downloadFile"/>
        </VBox>

        <VBox spacing="10.0">
            <Label text="Скачано: 0" fx:id="download"/>
            <Label text="Отправлено: 0" fx:id="sent"/>
            <Label text="Не отправлено: 0" fx:id="notSent"/>
        </VBox>
    </HBox>

</VBox>
